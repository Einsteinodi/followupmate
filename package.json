{
  "name": "followupmate",
  "version": "1.0.0",
  "description": "Automated follow-up email SaaS for freelancers and small businesses",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm start\" \"cd client && npm start\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "install:all": "npm install && cd client && npm install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "keywords": [
    "saas",
    "email",
    "automation",
    "follow-up",
    "freelancer"
  ],
  "author": "FollowUpMate",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "paystack": "^2.0.1",
    "qrcode": "^1.5.4",
    "react-beautiful-dnd": "^13.1.1",
    "recharts": "^3.2.0",
    "sqlite3": "^5.1.6",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/paystack": "^2.0.4",
    "concurrently": "^8.2.2",
    "gh-pages": "^6.3.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
